<!-- ########  HTML - Выучить вот эти теги ####### -->

<!-- Вот так ставиться комент в html  -->
<div></div> <!-- Блок -->
<p></p> <!-- Абзац -->
<a href='Ссылка'>Анкор</a> <!-- Ссылка -->

<!-- Теги с которых складывается таблица  -->
<table>         <!-- Открытие таблицы  -->
  <tr>          <!-- Открытие рядка -->
    <td> Тест 1 </td>   <!-- Столбец 1 -->
    <td> Тест 2  </td>   <!-- Столбец 2 -->
  </tr>         <!-- Закрытие рядка -->
</table>        <!-- Закрытие таблицы  -->

<!---------------------------------------------------------------------------->
<!-- Первый пример  -->
<?php
  echo "<p>Абзац</p>"; // правильно
  <p>Абзац</p>; // ошибка
  <p>Абзац</p> // ошибка
  "<p>Абзац</p>"; // ошибка
?>

<!-- Второй пример  -->
<?php $login = 'admin'; ?>
<p>Результат:</p>
<?php if ( $login == 'admin' ) { ?>
    <a href='#'>Личный кабинет</a>
<?php } else ?>
    <a href='#'>Вход</a>
<?php } ?>


<!-- Третий пример  -->
<?php 
  $login = 'admin'; 
  echo "<p>Результат:</p>";
  if ( $login == 'admin' ) { 
     echo "<a href='#'>Личный кабинет</a>";
  } else 
     echo "<a href='#'>Вход</a>";
  } 
?>

